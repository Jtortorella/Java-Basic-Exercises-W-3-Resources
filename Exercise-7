package java.basicExercises.w3Resources;

import java.util.Scanner; //Imports scanner.

public class exercise7 //Main class heading.
{
	public static void main(String[] args) //Main method heading.
	{

		Scanner input = new Scanner(System.in); //Imports scanner.

		int number = 0; //Declares number variable for use within processes.

		System.out.println("What is the number selected?"); //Prompts user's response.
		number = input.nextInt(); //Sets user's response as the number variable, used for later processes.

		for (int i = 0; i < 11; i++) //For loop, allows a process to be completed for a number of time, here it is set to ten. i is a counter it is set to 0, it will increase one every time through (i++), upon reaching greater than ten it will stop.
		{
			System.out.printf("%-10s%-2d%-4s%-3d%-4s%-2d\n", "Answer = ", number, " x ", i, " = ", number * i); //Shows the multiplication of Number "x" i as it increases to 10.
		}

		input.close(); //Closes scanner.
	}
}

